<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewState"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/register_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Parking State"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/red"
        />

    <Button
        android:id="@+id/stateString"
        android:onClick="fireOf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="-60dp"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="'Busy'"
        android:clickable="false"
        android:textSize="15dp"
        android:textColor="#000000"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:background="#00000000" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/registration_background" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Reservation"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:weightSum="1.0">

            <Button
                android:id="@+id/btn_reserve"
                android:onClick="onClickReserve"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="left"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:text="Reserve"
                android:clickable="false"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-medium"
                android:textSize="18dp"
                android:background="@drawable/register_button" />

            <Button
                android:id="@+id/btn_arrived"
                android:onClick="onClickArrived"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="12dp"
                android:text="I arrived"
                android:clickable="false"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-medium"
                android:textSize="18dp"
                android:background="@drawable/register_button" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel_reservation"
            android:onClick="onClickCancelReservation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="Cancel reservation?"
            android:clickable="false"
            android:textSize="14dp"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/registration_background" />

    </LinearLayout>

</LinearLayout>